<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="algosoftapp.youtube.com">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/appicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".YoutubeActivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Category"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".YoutubeActivity.Home"
            android:label="Best Video Collections"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".YoutubeActivity.SelectedCategoryList" />
        <activity
            android:name=".YoutubeActivity.PlayVideoList"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".YoutubeActivity.PlayVideo"
            android:screenOrientation="landscape"/>
        <!--<activity android:name="algosoftapp.youtube.Refresh">-->

        <!--</activity>-->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="defd6b18e1b85cf9a94e59a2cc691bba001a7286" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6911912195923365~3446539191"/>
    </application>

</manifest>